    "test:watch": "vitest"
  },
  "dependencies": {
    "@fiscal-layer/contracts": "workspace:*",
    "fast-xml-parser": "^5.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.31",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "kosit",
    "xrechnung",
    "validation",
    "schematron",
    "fiscal-layer"
