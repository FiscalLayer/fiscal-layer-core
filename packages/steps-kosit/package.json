{
  "name": "@fiscal-layer/steps-kosit",
  "version": "0.0.1",
  "description": "KoSIT validator wrapper for FiscalLayer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
