{
  "name": "@fiscal-layer/filters-core",
  "version": "0.0.1",
  "description": "Core validation filters for FiscalLayer (OSS) - parser, offline validation",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./kosit": {
      "types": "./dist/kosit/index.d.ts",
      "import": "./dist/kosit/index.js"
    },
    "./semantic-risk": {
      "types": "./dist/semantic-risk/index.d.ts",
      "import": "./dist/semantic-risk/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fiscal-layer/contracts": "workspace:*",
    "@fiscal-layer/steps-parser": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fiscal-layer/fiscal-layer.git",
    "directory": "packages/filters-core"
  },
  "keywords": [
    "e-invoice",
    "XRechnung",
    "ZUGFeRD",
    "validation",
    "parser",
    "open-source"
  ]
}
