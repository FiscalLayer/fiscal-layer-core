{
  "name": "@fiscal-layer/steps-parser",
  "version": "0.0.1",
  "description": "XML/JSON invoice parser for FiscalLayer - detects format and converts to CanonicalInvoice",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fiscal-layer/contracts": "workspace:*",
    "@fiscal-layer/shared": "workspace:*",
    "fast-xml-parser": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "xrechnung",
    "zugferd",
    "factur-x",
    "peppol",
    "ubl",
    "cii",
    "en16931",
    "parser",
    "fiscal-layer"
  ]
}
