    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
